            <td>{{id}}</td>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{nombreEspecialidad}}</td>
            <td> <a href="/especialistas/{{id}}" class="btn btn-link">Ver m√°s</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
