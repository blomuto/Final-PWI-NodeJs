<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Especialistas</h1>
    <p class="lead">Bienvenido al administrador de especialistas.</p>
  </div>
</div>  

<div class="container">
    <div class="col-4 py-3">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">Nuevo</button>
    </div>
  <div class="col-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Especialidad</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each especialistas}}
        <tr>
            <td>{{id}}</td>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{nombreEspecialidad}}</td>
            <td><button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#exampleEditar">Editar</button></td>
            <td> 
                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleBorrar">Borrar</button>
            </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nuevo Especialista</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row justify-content-center py-3">
            <div class="col-6">
                <form method="post" action="/admin/especialistas/create">
                    <div class="form-group">
                        <input type="text" name="nombre" class="form-control" placeholder="nombre" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="apellido" class="form-control" placeholder="apellido" required>
                    </div>
                    <select name="idEspecialidad" class="form-control" required>
                        {{#each especialidades}}
                            <option value="{{id}}">{{nombre}}</option>
                        {{/each}}
                    </select>

                    <div class="text-center pt-3">
                        <button class="btn btn-info">Crear</button>
                    </div>
                </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleEditar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar Especialista</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row justify-content-center py-3">
            <div class="col-6">
                <h5>Sin hacer! Hacerlo por Postman ðŸ¤ž</h5>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleBorrar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Borrar Especialista</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row justify-content-center py-3">
            <div class="col-6">
                <h5>Sin hacer! Hacerlo por Postman ðŸ¤ž</h5>
